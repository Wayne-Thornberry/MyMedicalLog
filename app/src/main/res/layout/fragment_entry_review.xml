<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".CreationEntryActivity">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="New Entry" android:gravity="center" android:textSize="32dp"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Review Information" android:gravity="center" android:textSize="24dp"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <Button android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="insertEntry"
                    android:text="Submit"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>