<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center_vertical"
              tools:context=".CreationDoctorActivity">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Doctor Information" android:gravity="center" android:textSize="24dp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            tools:context=".ui.creation.log.general.LogGeneralFragment"
            android:padding="23dp">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/text_firstname" android:text="Doctor Code"/>
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="phone"
                  android:id="@+id/input_firstname" android:hint=""/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/text_lastname" android:text="Passcode"/>
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="phone"
                  android:id="@+id/input_lastname" android:hint=""/>
        <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Scan QR Code"/>
    </LinearLayout>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Submit" android:onClick="submitDetails"/>
</LinearLayout>