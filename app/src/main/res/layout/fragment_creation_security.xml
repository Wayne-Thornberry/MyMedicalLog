<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_gravity="center"
              tools:context=".ui.creation.CreateActivity">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Security Setup" style="@style/MainTheme.HeadingOne"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/text_margin">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/text_firstname" android:text="Doctor Code"/>
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="phone"
                  android:id="@+id/input_username" android:hint=""/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/text_lastname" android:text="Passcode"/>
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="phone"
                  android:id="@+id/input_password" android:hint=""/>
        <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Scan QR Code" style="@style/MainTheme.PrimaryButton"/>
    </LinearLayout>
</LinearLayout>
