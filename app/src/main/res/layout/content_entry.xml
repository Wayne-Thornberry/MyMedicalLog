<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:id="@+id/content_entry"
              android:visibility="gone"
              android:layout_height="wrap_content">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/entry_title" android:text="ENTRY" style="@style/MainTheme.HeadingOne"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/entry_id" android:text="ID"  style="@style/MainTheme.TextMain"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/entry_type" android:text="TYPE" style="@style/MainTheme.TextMain"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/entry_severity" android:text="SEVERITY" style="@style/MainTheme.TextMain"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/entry_created_date" android:text="CREATION DATE" style="@style/MainTheme.TextMain"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/entry_updated_date" android:text="UPDATE DATE" style="@style/MainTheme.TextMain"/>
</LinearLayout>